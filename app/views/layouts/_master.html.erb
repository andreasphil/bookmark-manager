<!DOCTYPE html>
<html>
<head>
  <title>Bookmark Manager</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <% if user_signed_in? %> 
  <style>
    body 
    {
      background-image: url(<%= @background_url %>);
    }
  </style>
  <% end %>

</head>
<body>

  <!-- Show messages (if any) -->
  <% if notice %>
  <div id="notice"><%= notice %></div>
  <% end %>

  <!-- Show devise errors (if any) -->
  <%= devise_error_messages! %>

  <!-- Toolbar -->
  <nav class="header">
    <div class="container-fluid">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bookmark-navbar-collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Bookmark Manager', root_path, class: 'navbar-brand' %>
      </div>

      <!-- User menu -->

      <div class="collapse navbar-collapse" id="bookmark-navbar-collapse">
        <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to edit_user_registration_path do %>
            <span class="glyphicon glyphicon-cog"></span>
            <span class="header-label"> Account</span>
            <% end %>    
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <span class="glyphicon glyphicon-log-out"></span>
            <span class="header-label"> Logout</span>
            <% end %>    
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </nav>

  <main>
    <%= yield %>
  </main>

</body>
</html>
