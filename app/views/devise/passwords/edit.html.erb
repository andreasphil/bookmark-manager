<h1>Change your password</h1>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

    <% if @minimum_password_length %>
      <%= f.password_field :password, label: "New password", autofocus: true, autocomplete: "off", hint: "@minimum_password_length characters minimum" %>
    <% else %>
      <%= f.password_field :password, label: "New password", autofocus: true, autocomplete: "off" %>
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    
    <div class="actions">
      <%= f.submit "Change my password" %>
    </div>
<% end %>