<%= bootstrap_form_for(@tag) do |f| %>

  <!-- Error messages -->
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <%= f.text_field :title %>
  
  <!-- Color -->
  <%= f.select :color, tag_colors %>

  <!-- Buttons -->
  <div class="actions">
    <%= link_to 'Cancel', bookmarks_path, class: 'button-back' %>
    <%= f.submit %>
  </div>
<% end %>
