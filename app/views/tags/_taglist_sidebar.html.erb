<div class="tags-wrapper">
  <div class="tags">
    <div class="toolbar">
      <span class="navbar-brand">Tags</span>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to new_tag_path do %>
            <span class="glyphicon glyphicon-plus"></span>
          <% end %>
        </li>
        <li>
          <%= link_to tags_path do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
        </li>
      </ul>
    </div>
    <ul class="tag-list">
      <li>
        <%= link_to 'All Bookmarks', bookmarks_path %>
      </li>
      <% @tags.each do |tag| %>
        <li>
          <%= link_to tag.title, tag %>
        </li>
      <% end %>
    </ul>
  </div>
</div>