<h1>Manage Tags</h1>

<!-- Tag table -->
<table class="tag-table">
  <tbody>
    <% @tags.each do |tag| %>
      <tr>

        <!-- Title and edit link -->
        <td>
          <%= link_to edit_tag_path(tag) do %>
            <span class="label label-<%= tag.color %>"><%= tag.title %></span>
          <% end %>
        </td>

        <!-- Delete -->
        <td>
          <%= link_to tag, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>    
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<!-- Actions -->
<%= link_to 'Back', bookmarks_path, class: 'btn btn-default' %>
<%= link_to 'New Tag', new_tag_path, class: 'btn btn-primary' %>